@startuml hero

class Game {
    run()
}

abstract class Input {
    getPressedKey()
}

package com.educorreia.hero.world {
    class World {
        step()
        createWalls()
        processInput()
    }

    class Position {
        x
        y
    }

    abstract class Element {
        name
        character
        color

        draw()
    }

    class Creature {
        health
        
        move()
    }

    class Weapon {
        damage
    }

    class Item {
        name
    }

    Creature <-- Player
    Creature <-- Monster
    Creature *-- Position : nextPosition

    World *-- Player

    Element <-- Creature
    Element <-- Item
    Element <-- Wall
    Element <-- Tile

    Element *-- Position : position

    Player *-- Inventory

    Inventory *-- Item

    Item <-- Weapon
}

package com.educorreia.hero.gui {
    class Gui
}

Game *-- Gui
Game *-- World

@enduml